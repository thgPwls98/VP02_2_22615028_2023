<Page x:Class="_013.Pages.start"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_013.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="500"
      Title="start">

    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="btnInfo" Height="50" Width="80" Content="Information" Margin="0,0,30,0" Click="btnInfo_Click"/>
            <Button x:Name="btnLogin" Height="50" Width="80" Content="Login" Margin="0,0,30,0" Click="btnLogin_Click"/>
            <Button x:Name="btnSignUp" Height="50" Width="80" Content="Sign Up" Click="btnSignUp_Click" />


        </StackPanel>
    </Grid>
</Page>
